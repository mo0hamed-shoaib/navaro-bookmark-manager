{
  "extends": "../tsconfig.json",
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "../dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
